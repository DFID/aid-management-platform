@model AMP.ViewModels.NewFundingMechToSectorVM
@{
    ViewBag.Title = "NewMechSectorMapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-container">
        <div class="grid-row">
            <div class="form-horizontal">
                <h2>NewMechSectorMapping</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.InputSector.InputSectorCodeID)
                @Html.HiddenFor(model => model.InputSector.Status)
                @Html.HiddenFor(model => model.InputSector.LastUpdated)
                @Html.HiddenFor(model => model.InputSector.UserID)

                <div class="form-group">
                    @Html.LabelFor(model => model.InputSector.InputSectorCodeID, "ID", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.InputSector.InputSectorCodeID, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.InputSector.InputSectorCodeDescription, "Description", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.InputSector.InputSectorCodeDescription, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NewMapping, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @{
                                    @Html.DropDownListFor(model => model.NewMapping, (IEnumerable<SelectListItem>)ViewBag.DropDownList, "-- Select option --", new { @class = "form-control", id = "MappingOption" })
                                }
                            </div>
                        </div>
                <input type="hidden" id="SaveSuccess" value="@(ViewBag.Success.ToString())" />
                <div id="SaveMessage" style="display: none">Save Successful</div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

                    </div>
                </div>
            </div>
}

